@model IEnumerable<FirstCoreApp.Models.Products>

    <body>
<style>
    
   table, th, td {
  border: 1px solid black;
  text-align:center;
 
}
table
{
    width: 80%;
    background-color: antiquewhite;
       
}
</style>

<button id="btnAddProduct" onclick="addProductClick()">Add Product</button>
<table >
    <tr style="background-color:aliceblue">
        <th>SN</th>
        <th>Product</th>
        <th>Price</th>
        <th>Description</th>
        <th>Created</th>
        <th>Action</th>
    </tr>
    @{
        foreach(var item in Model)
        {
            <tr>
                <td>
                    @item.SN
                </td>
                <td>@item.ProductName</td>
                <td>@item.Price</td>
                <td>@item.Description</td>
                <td>@item.Created</td>
                <td>
                    <button style="background-color:aqua" onclick="editButtonClicked(@item.SN)">Edit</button>
                    <button style="background-color:red" onclick="deleteButtonClicked(@item.SN)">Delete</button>
                </td>
            </tr>
        }
    }
    
</table>
</body>